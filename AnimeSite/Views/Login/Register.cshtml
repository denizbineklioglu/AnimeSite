@model AnimeSite.Models.AppUserRegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="normal-breadcrumb set-bg" data-setbg="/anime-main/img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Kayıt Ol</h2>
                    <p>FanAnime'ye Hoşgeldiniz</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Kayıt</h3>
                    <form method="post">
                        <div class="input__item">
                            <input type="email"  asp-for="Email" placeholder="Mail Adresi">
                            <span class="icon_mail"></span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span><br />
                        <div class="input__item">
                            <input type="text"  asp-for="UserName" placeholder="Kullanıcı Adı">
                            <span class="icon_profile"></span>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span><br />
                        <div class="input__item">
                            <input type="password"  asp-for="Password" placeholder="Şifre">
                            <span class="icon_lock"></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span><br />
                        <div class="input__item">
                            <input type="password"  asp-for="ConfirmPassoword" placeholder="Şifre Tekrarı">
                            <span class="icon_lock"></span>
                        </div>
                        <span asp-validation-for="ConfirmPassoword" class="text-danger"></span><br />
                        <button type="submit" class="site-btn">Kayıt Ol</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Zaten bir hesabın var mı?</h3>
                        <a href="/Login/Login/" class="primary-btn">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Signup Section End -->

