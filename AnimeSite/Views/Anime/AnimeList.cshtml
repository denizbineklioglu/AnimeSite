@using EntityLayer
@model List<Anime>
@{
    ViewData["Title"] = "AnimeList";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/Dashboard/Index/"><i class="fa fa-home"></i> Ana Sayfa</a>
                    <span>Animeler</span>
                </div>
            </div> 
        </div>
    </div>
</div>
<section class="product-page spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="product__page__content">
                    <div class="product__page__title">
                        <div class="row">
                            <form class="row g-2" method="post" asp-action="AnimeList" asp-controller="Anime">
                                <div class="col-auto">
                                    <input type="text" class="form-control" name="p" placeholder="Ara..">
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-danger mb-3">Ara</button>
                                </div>
                            </form>                            
                        </div>
                    </div>
                    <div class="row">

                        @foreach (var item in Model)
                        {                           
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <a href="/Anime/AnimeDetail/@item.AnimeID">
                                <div class="product__item__pic set-bg" data-setbg="@item.Image1">
                                        </div>
                                    </a>
                                <div class="product__item__text">
                                    
                                   @* @await Component.InvokeAsync("_AnimeCategories"); *@

                                    <h5><a href="/Anime/AnimeDetail/@item.AnimeID">@item.AnimeName</a></h5>
                                </div>
                            </div>
                        </div>
                        }

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="product__sidebar">

                    @await Component.InvokeAsync("_CategoryList");

                </div>
            </div>
        </div>
    </div>
</section>

