@model EntityLayer.Anime
@{
    ViewData["Title"] = "AnimeDetail";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Anasayfa</a>
                    <a href="./categories.html">Animeler</a>
                    <span>@Model.AnimeName</span>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="@Model.Image1">
                        <div class="comment"><i class="fa fa-comments"></i> 11</div>
                        <div class="view"><i class="fa fa-eye"></i> 9141</div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Model.AnimeName</h3>
                            <span>@Model.JapanName</span>
                        </div>
                        <div class="anime__details__rating">
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-half-o"></i></a>
                            </div>
                            <span>1.029 Votes</span>
                        </div>
                        <p>
                            @Model.Description
                        </p>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Type:</span> @Model.Type</li>
                                        <li><span>Studios:</span> @Model.Studio</li>
                                        <li><span>Date aired:</span> @(((DateTime)Model.AnimeStartDate).ToString("dd-MMM-yyyy"))</li>
                                        @await Component.InvokeAsync("_AnimeCategories",new {id=ViewBag.i})
                                    </ul>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Rating:</span>@Model.Rating</li>
                                        <li><span>Duration:</span> @Model.Duration min/ep</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="anime__details__btn">
                            <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Takip Et</a>
                            <a href="#" class="watch-btn">
                                <span>Şimdi İzle</span> <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        @await Component.InvokeAsync("_AnimeEpisodes",new {id=ViewBag.i})
        @await Component.InvokeAsync("_AnimeComments",new {id=ViewBag.i})




